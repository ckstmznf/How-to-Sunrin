<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.edcan.howtosunrin.screen.qna.QnAActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.qna.QnAActivity">

        <TextView
            android:id="@+id/txt_main_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@{`Q. ` + viewModel.question.question, default=`Q. 선린생활 재미있나요?`}"
            android:textSize="28sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@{`A. ` + viewModel.question.answer, default=`A. 네. 하지만 많이 힘들어요.`}"
            android:textSize="20sp"

            app:layout_constraintTop_toBottomOf="@id/txt_main_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btn_main_nextBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="다음"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>